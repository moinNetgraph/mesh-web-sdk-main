{
  "name": "@meshconnect/web-link-sdk",
  "version": "3.1.2",
  "description": "A client-side JS library for integrating with Mesh Connect",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "exports": "./src/index.ts",
  "types": "./src/index.ts",
  "type": "module",
  "license": "MIT",
  "repository": "https://github.com/FrontFin/mesh-web-sdk.git",
  "homepage": "https://github.com/FrontFin/mesh-web-sdk",
  "devDependencies": {
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-typescript": "^7.20.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.5.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^2.2.1",
    "ts-jest": "^29.1.2",
    "util": "^0.12.4"
  },
  "dependencies": {
    "@meshconnect/node-api": "^2.0.16",
    "@solana/web3.js": "^1.91.1",
    "bs58": "^5.0.0",
    "buffer": "^6.0.3",
    "ethers": "^6.11.1"
  },
  "scripts": {
    "build": "yarn updateVersion && rimraf dist && yarn build:esm && yarn copy",
    "build:esm": "tsc --outDir dist",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "eslint **/*.ts",
    "copy": "node ./tools/copy",
    "updateVersion": "node ./tools/update-version",
    "publish:npm": "yarn build && cd dist && yarn publish --access public",
    "test": "jest",
    "test:cov": "jest --ci --coverage"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "./jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageDirectory": "./coverage",
    "transform": {
      "^.+\\.[tj]sx?$": [
        "babel-jest",
        {
          "presets": [
            "@babel/preset-env",
            "@babel/preset-typescript"
          ]
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@solana/web3.js|uuid|jayson|superstruct|@noble|@meshconnect|ethers)/)"
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    }
  }
}
